@model Bachelor_Gr4_Chatbot_MVC.Models.QnAViewModels.QnABaseClass

@{
    ViewData["Title"] = "Svarta Bjørn | Registrer ny QnA Bot";
}
<div id="wrapper">

    @await Html.PartialAsync("_Navbar_admin")

    <!-- Page Content -->
    <div id="page-wrapper">

        <div class="container-fluid">
            <div class="col-lg-12">
                <div class="row">
                    <div class="col-md-10">
                        <h2>Registrer en ny chatbot</h2>

                        <h4>Her kan du registrere en ny chatbot</h4>
                        
                    </div>
                    <div class="col-md-2">
                        <img src="~/images/bot-help.jpg" style="float:right;max-height:100px;max-width:100px;" />
                    </div>
                </div>
                <hr />
                <div class="row">
                    <div class="col-md-4">
                        <form asp-action="RegisterNewQnaBotAsync">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-group">
                                <label asp-for="chatbotName" class="control-label"></label>
                                <input asp-for="chatbotName" class="form-control" />
                                <span asp-validation-for="chatbotName" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="subscriptionKey" class="control-label"></label>
                                <input asp-for="subscriptionKey" class="form-control" />
                                <span asp-validation-for="subscriptionKey" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="knowledgeBaseID" class="control-label"></label>
                                <input asp-for="knowledgeBaseID" class="form-control" />
                                <span asp-validation-for="knowledgeBaseID" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <input type="submit" value="Opprett" class="btn btn-success" />
                            </div>
                        </form>
                    </div>
                    <div class="col-md-4 col-md-offset-4">
                        <p><span class="glyphicon glyphicon-info-sign"> </span>For å lage en chatbot må du først gå til <a href="https://qnamaker.ai/">QnAMaker.ai</a> å lage deg en chatbot.</p>
                    </div>
                </div>

                <div>
                    <a asp-action="QnaBots">Tilbake til listen</a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{

@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <!-- Metis Menu Plugin JavaScript -->
    <script src="~/vendor/metisMenu/metisMenu.min.js"></script>
    <!-- Custom Theme JavaScript -->
    <script src="~/dist/js/sb-admin-2.js"></script>

}