@model IEnumerable<Bachelor_Gr4_Chatbot_MVC.Models.Conversation>

@{
    ViewData["Title"] = "Svarta Bjørn | Samtaler med aktiv chatbot";
}
<div id="wrapper">
    @await Html.PartialAsync("_Navbar_admin")

    <!-- Page Content -->
    <div id="page-wrapper">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-10">
                    <h2>Samtaler med aktiv chatbot</h2>
                </div>
                <div class="col-md-2">
                    <img src="~/images/bot-help.jpg" style="float:right;max-height:100px;max-width:100px;" />
                </div>
            </div>
            <hr />

            @if (Model.Count() > 0)
            {
                <div class="col-lg-12">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th scope="col">
                                    @Html.DisplayNameFor(model => model.ConversationId)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.UserGroup1)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.UserGroup2)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.IsChatBot)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.StartTime)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.EndTime)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Result)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.KnowledgebaseId)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.QnABaseId)
                                </th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td scope="row">
                                        @Html.DisplayFor(modelItem => item.ConversationId)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.UserGroup1)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.UserGroup2)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.IsChatBot)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.StartTime)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.EndTime)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Result)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.KnowledgebaseId)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.QnABaseId)
                                    </td>
                                    <td>
                                        @Html.ActionLink("Se samtalen", "ViewConversationDetails", new { id = item.ConversationId }) |
                                        @Html.ActionLink("Delete", "Delete", new { /* id=item.PrimaryKey */ })
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

            }
            else
            {
                <div class="col-md-12">
                    <h4>Ingen samtaler er registrert.</h4>
                </div>

            }

        </div>
    </div>
</div>

@section Scripts{
    <!-- Metis Menu Plugin JavaScript -->
    <script src="~/vendor/metisMenu/metisMenu.min.js"></script>
    <!-- Custom Theme JavaScript -->
    <script src="~/dist/js/sb-admin-2.js"></script>

}