@model Bachelor_Gr4_Chatbot_MVC.Models.User
@{
    ViewData["Title"] = "ManageUser";
}
<div id="wrapper">

    @await Html.PartialAsync("_Navbar_admin")

    <!-- Page Content -->
    <div id="page-wrapper">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-12">
                    <h1 class="page-header">Behandle bruker</h1>

                    
                    <form role="form">
                        <div class="form-group">
                            <label>Epost</label>
                            <input class="form-control" value="@Html.DisplayFor(model => model.Email)">
                            <p class="help-block">Brukerens epost</p>
                        </div>
                        <div class="form-group">
                            <label>Brukernavn</label>
                            <input class="form-control" value="@Html.DisplayFor(model => model.Username)">
                            <p class="help-block">Brukerens brukernavn.</p>
                        </div>
                        <div class="form-group">
                            <label>Aktiv</label>
                            <input type="checkbox" class="form-check-input" id="isActiveCheckBox" checked="@Html.ValueFor(model => model.Active)">                          
                            <p class="help-block">Er brukeren aktiv eller ikke.</p>
                        </div>
                        <button type="submit" class="btn btn-default">Oppdater</button>
                    </form>

                </div>
                <!-- /.col-lg-12 -->
            </div>
            <!-- /.row -->
        </div>
        <!-- /.container-fluid -->
    </div>
    <!-- /#page-wrapper -->

</div>
<!-- /#wrapper -->

@section Scripts{
    <!-- Bootstrap Core JavaScript -->
    <script src="~/vendor/bootstrap/js/bootstrap.min.js"></script>
    <!-- Metis Menu Plugin JavaScript -->
    <script src="~/vendor/metisMenu/metisMenu.min.js"></script>
    <!-- Morris Charts JavaScript -->
    <script src="~/vendor/raphael/raphael.min.js"></script>
    <script src="~/vendor/morrisjs/morris.min.js"></script>
    <script src="~/data/morris-data.js"></script>
    <!-- Custom Theme JavaScript -->
    <script src="~/dist/js/sb-admin-2.js"></script>

}