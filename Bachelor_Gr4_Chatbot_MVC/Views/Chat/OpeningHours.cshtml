@model Bachelor_Gr4_Chatbot_MVC.Models.ChatViewModels.ChatOpeningHoursViewModel

@{
    ViewData["Title"] = "OpeningHours";
}

<div id="wrapper">

    @await Html.PartialAsync("_Navbar_admin")

    <!-- Page Content -->
    <div id="page-wrapper">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-12">



                    <h2>Chat åpningstider</h2>

                    <h4>Registrer ny åpningstid</h4>
                    <hr />
                    <div class="row">
                        <div class="col-md-4">
                            <form asp-action="OpeningHours">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <div class="form-group">
                                    <label asp-for="DaysOfWeek" class="control-label"></label>

                                    @Html.DropDownListFor(x => x.SelectedDayOfWeek, new SelectList(Model.DaysOfWeek, "Value", "Text"))
                                </div>
                                <div class="form-group">
                                    <label asp-for="DateFrom" class="control-label"></label>
                                    <input asp-for="DateFrom" class="form-control" />
                                    <span asp-validation-for="DateFrom" class="text-danger"></span>

                                </div>

                                <div class="form-group">
                                    <label asp-for="DateTo" class="control-label"></label>
                                    <input asp-for="DateTo" class="form-control" />
                                    <span asp-validation-for="DateTo" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="OpenFrom" class="control-label"></label>
                                    <input asp-for="OpenFrom" class="form-control" />
                                    <span asp-validation-for="OpenFrom" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="OpenTo" class="control-label"></label>
                                    <input asp-for="OpenTo" class="form-control" />
                                    <span asp-validation-for="OpenTo" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <input type="submit" value="Save" class="btn btn-default" />
                                </div>
                            </form>
                        </div>
                    </div>


                </div> 
                <!-- /.col-lg-12 -->
            </div>
            <!-- /.row -->
        </div>
        <!-- /.container-fluid -->
    </div>
    <!-- /#page-wrapper -->
</div>
<!-- /#wrapper -->
                @section Scripts{

                    <!-- Metis Menu Plugin JavaScript -->
                    <script src="~/vendor/metisMenu/metisMenu.min.js"></script>
                    <!-- Custom Theme JavaScript -->
                    <script src="~/dist/js/sb-admin-2.js"></script>

                }

