
@{
    ViewData["Title"] = "UserChat";
}
@section AddToHead{
    <link href="@Url.Content("~/css/popupChat.css")" rel="stylesheet" type="text/css" />

}

<h2>UserChat</h2>
Tom side, viser chat fra brukers side. 
<button id="connectToSignalR">Koble til SignalR</button>
<!-- PopUp chatbox -->
<div id="chatbox_placeholder">
  

        <div class="chatbox chatbox--tray">
            <div class="chatbox__title" id="chatbox__title">
                <h5><a href="#">Chat</a></h5>
                <button class="chatbox__title__tray">
                    <span></span>
                </button>
                <button class="chatbox__title__close" id="chatbox__title_close">
                    <span>
                        <svg viewBox="0 0 12 12" width="12px" height="12px">
                            <line stroke="#FFFFFF" x1="11.75" y1="0.25" x2="0.25" y2="11.75"></line>
                            <line stroke="#FFFFFF" x1="11.75" y1="11.75" x2="0.25" y2="0.25"></line>
                        </svg>
                    </span>
                </button>
            </div>
            <div class="chatbox__body" id="chatbox__body">

